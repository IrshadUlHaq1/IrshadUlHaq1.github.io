<style type="text/css">
.grid-gallery {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: 10px;
  width: 100%;
}
.grid-item {
  width: 100%;
  height: 200px; /* Forces uniform height for a clean grid */
  object-fit: cover; /* Prevents stretching */
  border-radius: 8px;
  transition: transform .2s;
  cursor: pointer;
}
.grid-item:hover {
  transform: scale(1.05);
}
</style>

<div class="grid-gallery">
  <% for (const item of items) { %>
    <div class="gallery-container">
      <!-- Use item.path for the image source -->
      <a href="<%- item.path %>" class="lightbox" data-gallery="fungi-gallery">
        <img src="<%- item.path %>" class="grid-item" loading="lazy">
      </a>
    </div>
  <% } %>
</div>

